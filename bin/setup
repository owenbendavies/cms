#!/bin/bash

cd $(dirname $0)/..

if [ "$(uname)" == "Darwin" ]; then
  ./bin/setup_mac

  eval "$(rbenv init -)"
fi

set -ev

gem install bundler

bundle config --local path vendor/bundle

bundle check || bundle install --jobs=4 --retry=3

bundle clean

yarn

./bin/rails db:create db:migrate

./bin/rails log:clear tmp:clear

./bin/rails restart

echo "setup complete"
